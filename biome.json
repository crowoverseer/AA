{
	"$schema": "https://biomejs.dev/schemas/1.3.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"files": {
		"ignore": ["dist", "public/hallcontrol"]
	}
}
